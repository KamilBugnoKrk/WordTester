@layout MainLayout
@inherits LayoutComponentBase
@inject NavigationManager navigationManager

<AuthorizeView>
    <Authorized>
        @{navigationManager.NavigateTo("/");}; 
    </Authorized>
    <NotAuthorized>
        <div class="login-container">
            <div class="login-body">
                @Body
            </div>
            <div class="login-image">
                <img src="/assets/login.svg" />
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>
