@inject NavigationManager navigationManager

<div class="nothing-to-learn-container">
    <h4>Congrats! You have learned everything at the moment. Please try again later to practice your knowledge.</h4>
    <div class="image">
        <img src="/assets/nothingToLearn.svg" />
    </div>
    <button @onclick="@GoToDashboard" class="btn btn-lg btn-primary">Go to dashboard</button>
</div>

@code{
    private void GoToDashboard()
    {
        navigationManager.NavigateTo("/");
    }
}